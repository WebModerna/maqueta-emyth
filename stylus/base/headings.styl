/**
 * # Títulos
 *
 * Títulos h1 - h6
 * Los estilos de cada título también se asignan a una clase. De esta forma es
 * posible asignar un estilo de h3 a un h2, por ejemplo, de forma que podamos
 * respetar la semántica y aplicar los estilos adecuados a los títulos en las
 * diferentes secciones.
 */

h1
h2
h3
h4
h5
h6
  font-family $baseHeadingFontFamily

h1
.h1 {}

h2
.h2 {}

h3
.h3 {}

h4
.h4 {}

h5
.h5 {}

h6
.h6 {}

// background de las diferentes secciones
.fondo
	background-size cover


// Heading de secciones de la web en la home
.heading
	background $ladrillo
	padding 0.5em
	h1, h2, h3, h4, h5, h6, .h1, .h2, .h3, .h4, .h5, .h6
		color $white
		font-size 1.2em
		padding-right 1em
		text-align right
		[class^="icon-"], [class*=" icon-"]
			float left

@media all and (min-width: 40em)
	.heading
		h1, h2, h3, h4, h5, h6, .h1, .h2, .h3, .h4, .h5, .h6
			font-size 1.7em

.heading-item
	padding 0.2em
	position relative
	h1, h2, h3, h4, h5, h6, .h1, .h2, .h3, .h4, .h5, .h6
		color $white
		text-align center

	&.verde
		background $VerdeClarito

	&.azul
		background $azul_claro

	&.gris
		background $gris

	&.google
		background $google

	&.negro
		background $black

	&.morado
		background $morado_claro

	&.naranja
		background $NaranjaLadrillo
