// Clases utilitarias

.is-hidden
	display none !important
	

// Alineaciones t√≠picas de WordPress en el editor de contenidos.
.alignright
a .alignright 
	float right
	margin-left 1em
	margin-bottom 1em


.alignleft
a .alignleft 
	float left
	margin-right 1em
	margin-bottom 1em


.aligncenter
a .aligncenter 
	display block
	margin-right auto
	margin-left auto
	margin-bottom 1em
	
.centrado
	margin-left auto
	margin-right auto
	text-align center

.clearboth
	clear both
	
.error_404
	background $black
	font-size 5em
	color $ladrillo
	
// Listas horizontales separadas por una barra
.ul_horizontal
	li
		display inline-block
	li + li
		border-left 1px dotted $silver
		