/*
Listado de items de un portfolio de productos o lo que sea
*/
.portfolio
	padding 3px
	text-align center

.contenedor__item
	display inline-block
	margin 0.2em auto
	padding-right 1em
	vertical-align top

.item
	max-width 290px
	position relative
	transition_comun()
	&:hover
	&:focus
		background rgba($black, 0.5)
		box-shadow 0px 0px 5px 5px $black
		transform scale(1.02)
		

	figure
		margin 0
		padding 0
		position relative
		width 100%
		img
			display block
			max-width 290px
			width 100%
	
