// El encabezado principal de la web
.header
	// background $white
	// background #FAF6EB
	box-shadow 5px 0px 10px $black
	box-sizing border-box
	

.header__h1
	display inline-block
	max-width 100px
	vertical-align middle
	h1
	.h1
		color $NaranjaLadrillo
		font-size 0.7em
		padding 0
		margin 0
		span
			display inherit
			color $VerdeClaro

@media all and (min-width:30em)
	.header__h1
		max-width none
		h1
		.h1
			font-size 0.9em


@media all and (min-width:56.8em)
	.header
		overflow hidden

@media all and (min-width:64em)	
	.header__h1
		h1
		.h1
			font-size 1em
		
	

