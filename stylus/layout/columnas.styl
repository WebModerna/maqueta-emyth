/*
Columnas generales y sobre todo las del sitio web
*/
.columna--right
	padding 0 0.5em

@media only screen and (min-width:50em)
	.columna--left
	.columna--right
		display inline-block
		vertical-align top

	// Para el main 
	.columna--left
		width 70%

	// Sidebar derecha
	.columna--right
		margin-left 1%
		padding 0.5em 0 0 0
		width 28%