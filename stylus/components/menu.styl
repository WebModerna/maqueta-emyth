// El menú de navegación. Precisamente el botón. La hamburguesa
// Variables del color
$color_del_menu 		?= $ladrillo
$color_del_menu_hover 	?= $concreto
$color_del_menu_focus 	?= $white
$color_del_menu_active 	?= $ladrillo






.menu
	float right
	margin-right 0.5em
	margin-top 1em
	a
		border-radius 0.3em
		box-sizing border-box
		display block
		height 2.5em
		overflow hidden
		padding 0.3em 0.4em
		text-align center
		text-decoration none
		width 3em
		span
			background $color_del_menu 
			border-radius 1em
			display block
			height 0.3em
			margin auto
			transition all 0.1s ease
			width 90%
		span + span
			margin-top 0.4em
			
		&:hover
			span
				background $color_del_menu_hover
		&:active
			span
				background $color_del_menu_active
				
@media only screen and (min-width:56.8em)
	.menu
		display none
