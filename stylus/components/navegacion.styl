// Formato de la barra de navegación principal
.nav
	box-sizing border-box
	position relative
	z-index 200
	&--listado
		background $black
		display block
		font-family $baseHeadingFontFamily
		top 0
		left -500px
		margin 0
		opacity 0
		position absolute
		padding 0
		transition all 0.4s ease-in-out
		transition all 0.6s cubic-bezier(0.5, -0.5, 0.5, 1.5)
		// transition all 0.3s	cubic-bezier(0.215, 0.610, 0.355, 1.000)
		visibility hidden
		width 100%
	
		&--item
			display block
			list-style none
			a // Los enlaces
				display block
				color $white
				padding 1em
				position relative
				text-decoration none
				text-shadow_lindo()
				transition_comun()
				z-index 3
				&:after // El símbolo al final
					// content "-›"
					content "→"
					display inline-block
					float right
					transition_comun()
				&:before
					background $white
					content ""
					height 100%
					right 0
					opacity 0.5
					position absolute
					top 0
					transition_comun()
					width 0
					z-index -1
				
				// Estilos al hover y al focus
				&:hover
				&:focus
					background $ladrillo
					&:before
						width 10%
						
						
		// Estilo solo al border superior exepto al primer item del menú
		&--item + &--item
			border-top 1px solid $gray
			border-top 1px solid rgba($black_puro, 0.25)
			box-shadow 0px 1px 0px 0px rgba($white, 0.075) inset
			
		// Estilos cuando está abierto o cerrado el menú de navegación
		&-abrir
			// height auto
			top 0
			left 0
			opacity 1
			visibility visible
		&-cerrar
			// height 0
			left -500px
			opacity 0
			visibility hidden

// Estilos cuando el item está siendo visitado actualmente
.current_menu_item
.current_page_item
	a
		color $Celeste
		cursor initial
		&:after
			transform rotate(90deg)
		&:before
			display none

// Cuando se agranda la pantalla
@media only screen and (min-width:56.8em)
	.nav
		display inline-block
		float right
		&--listado
			background none
			margin-top 0.6em
			opacity 1
			overflow hidden
			position relative
			top auto
			left 0
			vertical-align middle
			visibility visible
			&--item
				display inline-block
				float left
				a
					&:after // Eliminamos símbolo al final
						display none
					&:before
						bottom 0
						height 0
						top auto
						width 100%
					&:hover
					&:focus
						&:before
							// box-shadow_lindo()
							height 100%
						
				
			// Eliminamos el estilo solo al border superior exepto al primer item del menú
			&--item + &--item
				border-top none
				box-shadow none